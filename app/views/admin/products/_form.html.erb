<div class="row justify-content-center">
  <div class="col-4 shadow p-5 mb-5 bg-body rounded">
    <%= form_with model: [:admin, product] do |form| %>
      <% if product.errors.any? %>
        <div style="color: red">
          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mt-3">
        <%= form.label :category, style: "display: block" %>
        <%= form.collection_select :category_id, Category.all, :id, :name, {}, class: "form-select" %>
      </div>

      <div class="mt-3">
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, class: "form-control", required: true %>
      </div>

      <div class="row">
        <div class="col mt-3">
          <%= form.label :price, "Price (like 2.99)" %>
          <%= form.text_field :price, class: "form-control", required: true %>
        </div>
        <div class="col mt-3">
          <%= form.label :in_stock, style: "display: block" %>
          <%= form.text_field :stock, class: "form-control", required: true %>
        </div>
      </div>

      <div class="mt-3">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_area :description, class: "form-control", required: true %>
      </div>

      <div class="mt-3">
        <%= form.label :image, style: "display: block" %>
        <%= form.text_field :image_url, class: "form-control", required: true %>
      </div>

      <div class="mt-5 text-center">
        <%= form.submit :Save, class: "btn btn-success me-2 col-3" %>
        <%= link_to "Cancel", admin_products_path, class: "btn btn-warning me-2 col-3", required: true %>
      </div>
    <% end %>
  </div>
</div>
