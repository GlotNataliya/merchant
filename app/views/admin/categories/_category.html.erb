<%= turbo_frame_tag category do %>
  <div class="container shadow-lg p-3 mb-3 bg-body rounded">
    <div id="<%= dom_id category %>">
      <ul class="list-inline">
        <li class="d-flex justify-content-between">
          <h3 class="align-self-center mb-0 mt-3"><%= category.name %></h3>
          <div class="d-flex">
          <%= link_to image_tag("icons/editing.png"), edit_admin_category_path(category), class: "btn btn-warning mt-3 me-3" %>
          <%= button_to image_tag("icons/rubbish.png"), admin_category_path(category), method: :delete,
                      data: { turbo: "false", confirm: 'Are you sure?' }, class: "btn btn-warning mt-3" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
<% end %>
