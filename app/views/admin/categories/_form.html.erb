<div class="row justify-content-center">
  <div class="col-4 shadow p-5 mb-5 bg-body rounded">
    <%= form_with model: [:admin, category] do |form| %>
      <%= form_error_notification(category) %>

      <div class="mt-3">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="mt-5 text-center">
        <%= form.submit :Save, data: {turbo: "false"}, class: "btn btn-success me-2 col-3" %>
        <%= link_to "Cancel", admin_products_path, data: {turbo: "false"}, class: "btn btn-warning me-2 col-3" %>
      </div>
    <% end %>
  </div>
</div>