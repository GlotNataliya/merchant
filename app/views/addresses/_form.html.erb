<%= form_with(model: address) do |form| %>
  <%= form_error_notification(address) %>

  <div class="row">
    <div class="mt-3 col-6">
      <%= form.label :line1, style: "display: block" %>
      <%= form.text_field :line1, class: "form-control bg-light border-1", required: true %>
    </div>

    <div class="mt-3 col-6">
      <%= form.label :line2, style: "display: block" %>
      <%= form.text_field :line2, class: "form-control bg-light border-1" %>
    </div>
  </div>
  <div class="row">
    <div class="mt-3 col-5">
      <%= form.label :city, style: "display: block" %>
      <%= form.text_field :city, class: "form-control bg-light border-1" %>
    </div>

    <div class="mt-3 col-3">
      <%= form.label :state, style: "display: block" %>
      <%= form.text_field :state, class: "form-control bg-light border-1", required: true %>
    </div>

    <div class="mt-3 col-4">
      <%= form.label :zip, style: "display: block" %>
      <%= form.text_field :zip, class: "form-control bg-light border-1", required: true %>
    </div>
  </div>

  <div>
    <%= form.hidden_field :user_id %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit :Save, class: "btn btn-success m-3 col-3", data: { action: "click->address#onclickShow" } %>
    <%= link_to "Cancel", order_path(current_user, @order), class: "btn btn-warning m-3 col-3",
                                                            data: { action: "click->address#onclickShow" } %>
  </div>
<% end %>
