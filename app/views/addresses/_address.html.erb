<%= turbo_frame_tag address do %>
  <div id="<%= dom_id address %>" class="d-flex justify-content-between mt-3 mb-3">
      <div class="d-flex h4 align-self-center mb-0">
        <%= address.to_s %>,
        <%= address.user.full_name %>
      </div>
      <div class="d-flex">
        <%= link_to image_tag("icons/editing.png"), edit_address_path(address), class: "btn btn-warning me-3" %>
        <%= button_to image_tag("icons/rubbish.png"), address_path(address), method: :delete,
                    data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-warning" %>
      </div>
  </div>
<% end %>
