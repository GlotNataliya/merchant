<div class="mt-5 d-flex justify-content-center align-items-center">
  <div class="col-md-4 p-5 shadow-sm border rounded-3">
    <h2 class="text-center mb-4 text-secondary">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages" %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
                                  class: "form-control border border-secondary" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", required: true,
                                        class: "form-control border border-secondary" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "mx-2" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "Log in", class: "btn btn-secondary" %>
      </div>
    <% end %>

    <div class="mt-3">
      <p class="mb-0 text-center">
        Don't have an account?
        <%= render "devise/shared/links" %>
      </p>
    </div>
  </div>
</div>
