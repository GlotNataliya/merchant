<div class="row">
  <div class="d-flex justify-content-between mt-4">
    <h2><b>Customer Reviews</b></h2>
    <%= link_to "+ Add review", new_review_path(@review), class: "btn btn-success btn-sm mb-3",
                                                  data: { turbo_frame: dom_id(Review.new) } %>
  </div>
</div>

<%= turbo_frame_tag "new_review" %>

<div class="row gap-4 mt-3" id="reviews">
  <% @reviews.each do |review| %>
    <%= render review %>
  <% end %>
</div>
