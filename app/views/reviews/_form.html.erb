<%= form_with(model: review) do |form| %>
  <% if review.errors.any? %>
    <div style="color: red">
      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class=" d-flex justify-content-center">
    <div class="mt-3 col-8 w-50">
      <%= form.text_area :description, class: "form-control form-control-lg bg-light border-0", rows: 4, cols: 40,
                                                        placeholder: "Please leave your review", required: true %>
    </div>

    <div>
      <%= form.hidden_field :user_id %>
    </div>
</div>
  <div class="mt-3 text-center">
    <%= form.submit :Save, class: "btn btn-success me-2 col-2" %>
    <%= link_to "Cancel", root_path, class: "btn btn-warning me-2 col-2", required: true %>
  </div>
<% end %>
