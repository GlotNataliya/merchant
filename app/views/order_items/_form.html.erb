<%= form_with(model: order_item) do |form| %>
  <%= form_error_notification(order_item) %>

  <div class="mt-3 w-50">
    <%= form.number_field :quantity, class: "form-control bg-light border-0" %>
  </div>

  <div class="mt-3">
    <%= form.submit :Save, class: "btn btn-success btn-sm", data: {turbo: "false"} %>
    <%= link_to "Cancel", order_path(current_user, @order), class: "btn btn-warning btn-sm me-2 col-3" %>
  </div>

<% end %>
